.content {
  padding: 20rpx;
  padding-top: 80rpx;
}

.activity-title {
  font-size: 35rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.sections {
  margin-bottom: 20rpx;
  padding: 5rpx;
  text-align: center;
}

.center {
  display: flex;
  justify-content: space-between;
}

.infos {
  display: flex;
  margin-bottom: 10rpx;
}





.section {
  margin-bottom: 20rpx;
  padding: 20rpx;
}



.sub-title {
  font-size: 35rpx;
  font-weight: 400;
  margin-bottom: 30rpx;
  padding-left: 40rpx;
  color: rgba(56, 56, 56, 1);
}

.info {
  display: flex;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
}


.rectangle {
  position: relative;
  width: 10rpx;
  height: 55rpx;
  background-color: rgba(0, 173, 181, 1);
  opacity: 1;
  margin-bottom: 10rpx;
  white-space: nowrap;
}


