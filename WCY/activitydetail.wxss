.container {
  position: relative;
  width: 100%;
  height: 100%;
}
.box {
  position: absolute;
  right: 0rpx;
  width: 160rpx;
  height: 50rpx;
  border-radius: 0rpx 0rpx 0rpx 35rpx;
  background: rgba(0, 173, 181, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9;
}

.boxtext {
  font-size: 30rpx;
  font-weight: 400;
  line-height: 45rpx;
  color: rgba(255, 255, 255, 1);
}

.postercontainer {
  position: absolute;
  width: 100%;
  height: 700rpx;
  justify-content: center;
  align-items: center;
}

.poster {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.catheadcontainer {
  position: absolute;
  top: 500rpx;
  width: 100%;
  height: 100%;
  align-items: center; 
  z-index: 8;
