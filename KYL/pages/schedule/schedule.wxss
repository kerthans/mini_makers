  height: 73.25rpx;
}

.table {/*表格整体*/
  border: 2px solid #a6a6a6;
  border-radius: 15px;
  width: 605rpx;
  height: 910.368rpx;
  overflow: hidden;
  position: relative;
  top:-168.24rpx;
}

.table-header, .table-row {/*每一行的表格设计*/
  display: flex;
  justify-content: space-between;
}



.table-header {/*表格的表头*/
  background-color: #00adb5;
  color: white;
}

.table-cell-header {/*表头的每个单元格*/
  flex: 1;
  text-align: center;
  line-height: 73.25rpx;
  border-right: 2px solid #ccc;
  border-bottom: 2px solid #ccc;
  width:201.67rpx;
  height: 73.25rpx;
}

.table-cell-header-a {/*新闻稿表格*/
  flex: 1;
  text-align: center;
  line-height: 73.25rpx;
  border-right: 0px solid #ccc;
  border-bottom: 2px solid #ccc;
  width:.201.67rpx;
  height: 73.25rpx;
  position: relative;
  left: 7rpx;
}

.table-cell {/*表格主体的每个单元格*/
  flex: 1;
  text-align: center;
  line-height: 64.39rpx;
  border-right: 2px solid #ccc;
  border-bottom: 2px solid #ccc;
  width:210.22rpx;
  height: 62rpx;
}

.table-cell:last-child {/*最后一个单元格*/
  border-right: none;
}

.table-body {/*表身整体*/
  width: 100%;
}

.table-row {/*表身的每一行*/
  background-color: #f9f9f9;
}

.table-row:nth-child(even) {/*对偶数单元格*/
  background-color: #ffffff;
}

