/* pages/submit/submit.wxss */
.container {/*页面整体设置*/
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100vw;
  background-color: #222831;
}
/*导航栏*/
.top-nav {/*导航栏的容器*/
